<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/cardview_shadow_end_color">
    <androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
        app:cardCornerRadius="4dp"
    android:background="#fff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Breakfast form"
            android:padding="8dp"
            android:textSize="20sp"
            android:textColor="#fff"
            android:background="@color/colorPrimary"/>

        <CheckBox
            android:id="@+id/checkBox_BreakFastReq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:text="Required" />

    </LinearLayout>
</androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="4dp"
        android:background="#fff">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lunch form"
                android:padding="8dp"
                android:textSize="20sp"
                android:textColor="#fff"
                android:background="@color/colorPrimary"/>

            <CheckBox
                android:id="@+id/checkBox_Lunch_rice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:text="Rice required" />

            <EditText android:id="@+id/editText_lunch_roti_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="1"
                android:hint="Roti in quantity"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="4dp"
        android:background="#fff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dinner form"
                android:textSize="20sp"
                android:textColor="#fff"
                android:padding="8dp"
                android:background="@color/colorPrimary"/>

            <CheckBox
                android:id="@+id/checkBox_Dinner_rice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="16dp"
                android:text="Rice required" />

            <EditText android:id="@+id/editText_dinner_roti_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="1"
                android:hint="Roti in quantity"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">
        <Button android:id="@+id/btn_meal_clear"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:textColor="#fff"
            android:background="@drawable/rounded_button"
            android:text="Clear"/>
        <Button android:id="@+id/btn_meal_noMeal"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:textColor="#fff"
            android:background="@drawable/rounded_button"
            android:text="No Meal"/>
        <Button android:id="@+id/btn_meal_update"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_margin="8dp"
            android:textColor="#fff"
            android:background="@drawable/rounded_button"
            android:layout_weight="1"
            android:text="Update"/>
    </LinearLayout>

</LinearLayout>